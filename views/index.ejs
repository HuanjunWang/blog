<%- include header %>

<% posts.forEach(function (post, index) { %>
    <% if(post.title != title) { %>
      <p><h2><a href="/artical?id=<%= post._id%>"><%= post.title %></a></h2></p>
    <% } %>
    <p class="info">
    作者：<a href="/user?name=<%= post.name %>"><%= post.name %></a> | 
    日期：<%= post.time.minute %>
    <% if(user && post.name == user.name) { %>
      |<a href="/delete?id=<%= post._id %>">删除</a>
    <% } %>
    </p>
    <p><%- post.post %></p>
<% }) %>

<%- include footer %>