include header.jade
        each post in posts
            if post.title != title
              p
                h2 
                  a(href='/artical?id=' + post._id) #{post.title}
                
            p.info
              |作者:
              a(href='/user?name=' + post.name) #{post.name}
              ||
              |日期: #{post.time.minute}
              if user && post.name == user.name
                ||
                a(href='/edit?id='+post._id)  编辑 
                ||
                a(href='/delete?id='+post._id)  删除 
            
            p !{post.post}
        

